<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/identification"
        android:text="Identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F60000"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/token"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:hint="Enter your TOKEN"
        android:textAlignment="center"
        android:inputType="text"
        android:textColor="#22427C"
        android:layout_below="@+id/identification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/accessMap"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="VALIDATE"
        android:textSize="18dp"
        android:textColor="#22427C"
        android:layout_gravity="center_horizontal"
        android:background="#EC5E5E"
        android:layout_marginBottom="151dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/affiche_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher Token"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>